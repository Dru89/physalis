# Home page
GET     /                           @controllers.Application.index()
GET 	/u/:user					controllers.Users.index(user:String)


# Login page
GET 	/custom/login				 @controllers.CustomLoginController.login
GET 	/custom/logout 				 @controllers.CustomLoginController.logout
GET     /login                      @controllers.Application.login
GET     /signup                      @controllers.Application.signup
GET     /logout                      @controllers.Application.logout
GET		/test						@controllers.SocialApplication.securedURL
GET		/testuser					@controllers.SocialApplication.userAwareURL
GET     /authenticate/:provider     @securesocial.controllers.ProviderController.authenticate(provider)
POST    /authenticate/:provider     @securesocial.controllers.ProviderController.authenticateByPost(provider)

    


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
-> 		/auth 						 	securesocial.Routes